{
    "identifier": "dev.neolith.Rust",
    "name": "Rust",
    "organization": "Neolith",
    "description": "Syntax highlighting and autocompletion for Rust.",
    "version": "1.0",
    "categories": ["languages"],
    
    "main": "main.js",
    
    "entitlements": {
        "process": true,
        "filesystem": "readonly"
    },
    
    "config": [
        {
            "key": "rust.language-server-path",
            "title": "Language Server Path",
            "type": "path",
            "placeholder": "~/.cargo/bin/rls"
        }
    ],
    
    "activationEvents": [
        "onLanguage:rust",
        "onWorkspaceContains:Cargo.toml"
    ]
}
